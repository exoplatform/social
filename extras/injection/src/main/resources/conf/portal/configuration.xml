<configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd http://www.exoplatform.org/xml/ns/kernel_1_2.xsd"
  xmlns="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd">
  
  <component>
    <type>org.exoplatform.social.extras.injection.PatternInjectorConfig</type>
    <init-params>
      <value-param>
        <name>user-suffix-length</name>
        <value>4</value><!-- it's suffix length of user, -1 without suffix pattern -->
      </value-param>
      <value-param>
        <name>space-suffix-length</name>
        <value>5</value><!-- it's suffix length of space name, -1 without suffix pattern -->
      </value-param>
      <value-param>
        <name>user-password-default</name>
        <value>exo</value><!-- it's user's password, default is "exo" -->
      </value-param>
    </init-params>
  </component>

  <component>
    <type>org.exoplatform.social.extras.injection.IdentityInjector</type>
  </component>

  <component>
    <type>org.exoplatform.social.extras.injection.SpaceInjector</type>
  </component>
  
  <component>
    <type>org.exoplatform.social.extras.injection.MembershipInjector</type>
  </component>

  <component>
    <type>org.exoplatform.social.extras.injection.ActivityInjector</type>
  </component>
  
  <component>
    <type>org.exoplatform.social.extras.injection.ActivityMentionInjector</type>
  </component>

  <component>
    <type>org.exoplatform.social.extras.injection.RelationshipInjector</type>
  </component>
 
  <component>
    <type>org.exoplatform.services.bench.DataInjectorService</type>
  </component>

  <external-component-plugins>
    <target-component>org.exoplatform.services.bench.DataInjectorService</target-component>
    <component-plugin>
      <name>identity</name>
      <set-method>addInjector</set-method>
      <type>org.exoplatform.social.extras.injection.IdentityInjector</type>
    </component-plugin>
    <component-plugin>
      <name>space</name>
      <set-method>addInjector</set-method>
      <type>org.exoplatform.social.extras.injection.SpaceInjector</type>
    </component-plugin>
    <component-plugin>
      <name>membership</name>
      <set-method>addInjector</set-method>
      <type>org.exoplatform.social.extras.injection.MembershipInjector</type>
    </component-plugin>
    <component-plugin>
      <name>activity</name>
      <set-method>addInjector</set-method>
      <type>org.exoplatform.social.extras.injection.ActivityInjector</type>
    </component-plugin>
    <component-plugin>
      <name>mentioner</name>
      <set-method>addInjector</set-method>
      <type>org.exoplatform.social.extras.injection.ActivityMentionInjector</type>
    </component-plugin>
    <component-plugin>
      <name>relationship</name>
      <set-method>addInjector</set-method>
      <type>org.exoplatform.social.extras.injection.RelationshipInjector</type>
    </component-plugin>
  </external-component-plugins>
</configuration>
