<?xml version="1.0" encoding="UTF-8"?>
<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
             version="2.0"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd
   http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd">
   
   <!--User notification settings portlet -->
   <portlet>
     <description xml:lang="EN">User notification settings portlet</description>
     <portlet-name>NotificationSettingsPortlet</portlet-name>
     <display-name xml:lang="EN">User Notification Settings</display-name>
     <portlet-class>org.exoplatform.social.portlet.userNotification.UserNotificationPortlet</portlet-class>
          
     <supports>
       <mime-type>text/html</mime-type>
     </supports>
     
     <supported-locale>en</supported-locale>
     <resource-bundle>locale.portlet.notification.UserNotificationPortlet</resource-bundle>
     <portlet-info>
       <title>User notification settings</title>
       <keywords>social</keywords>
     </portlet-info>
     
   </portlet>

   <portlet>
     <description xml:lang="EN">Status Profile Portlet</description>
     <portlet-name>StatusProfilePortlet</portlet-name>
     <display-name xml:lang="EN">Status Profile Portlet</display-name>
     <portlet-class>org.exoplatform.social.portlet.statusProfile.StatusProfilePortlet</portlet-class>
          
     <supports>
       <mime-type>text/html</mime-type>
     </supports>
     
     <supported-locale>en</supported-locale>
     <resource-bundle>locale.portlet.userProfile.UserProfilePortlet</resource-bundle>
     <portlet-info>
       <title>Status Profile</title>
       <keywords>social</keywords>
     </portlet-info>
     
   </portlet>

   <portlet>
     <description xml:lang="EN">Action Profile Portlet</description>
     <portlet-name>ActionProfilePortlet</portlet-name>
     <display-name xml:lang="EN">Action Profile Portlet</display-name>
     <portlet-class>org.exoplatform.social.portlet.actionProfile.ActionProfilePortlet</portlet-class>
     <supports>
       <mime-type>text/html</mime-type>
     </supports>
     <supported-locale>en</supported-locale>
     <resource-bundle>locale.portlet.userProfile.UserProfilePortlet</resource-bundle>
     <portlet-info>
       <title>Status Profile</title>
       <keywords>social</keywords>
     </portlet-info>
   </portlet>
   
   <portlet>
     <description xml:lang="EN">Mini Connections Portlet</description>
     <portlet-name>MiniConnectionsPortlet</portlet-name>
     <display-name xml:lang="EN">Mini Connections Portlet</display-name>
     <portlet-class>org.exoplatform.social.portlet.miniConnections.MiniConnectionsPortlet</portlet-class>
          
     <supports>
       <mime-type>text/html</mime-type>
     </supports>
     
     <supported-locale>en</supported-locale>
     <resource-bundle>locale.portlet.userProfile.UserProfilePortlet</resource-bundle>
     <portlet-info>
       <title>Connections Profile</title>
       <keywords>social</keywords>
     </portlet-info>
     
   </portlet>
   
   <portlet>
    <description xml:lang="EN">Experience Profile Portlet</description>
    <portlet-name>ExperienceProfilePortlet</portlet-name>
    <display-name xml:lang="EN">Experience Profile Portlet</display-name>
    <portlet-class>org.exoplatform.social.portlet.experienceProfile.ExperienceProfilePortlet</portlet-class>

    <supports>
      <mime-type>text/html</mime-type>
    </supports>
    
    <supported-locale>en</supported-locale>
    <resource-bundle>locale.portlet.userProfile.UserProfilePortlet</resource-bundle>
    <portlet-info>
      <title>Experience Profile Portlet</title>
      <short-title>Experience Profile Portlet</short-title>
      <keywords>social</keywords>
    </portlet-info>
  </portlet>
  
  <portlet>
    <description xml:lang="EN">Basic Profile Portlet</description>
    <portlet-name>BasicProfilePortlet</portlet-name>
    <display-name xml:lang="EN">Basic Profile Portlet</display-name>
    <portlet-class>org.exoplatform.social.portlet.basicProfile.BasicProfilePortlet</portlet-class>

    <supports>
      <mime-type>text/html</mime-type>
    </supports>

    <supported-locale>en</supported-locale>
    <resource-bundle>locale.portlet.userProfile.UserProfilePortlet</resource-bundle>
    <portlet-info>
      <title>Basic Profile Portlet</title>
      <short-title>Basic Profile Portlet</short-title>
      <keywords>social</keywords>
    </portlet-info>
  </portlet>
  
</portlet-app>
