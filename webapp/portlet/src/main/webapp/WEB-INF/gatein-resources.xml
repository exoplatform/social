  <module>
    <name>selectize</name>
    <script>
      <adapter>
        (function() {
          var oldJQuery = this.jQuery;
          this.jQuery = jquery;

          <include>/javascript/selectize.js</include>

          this.jQuery = oldJQuery;
          return this.Selectize;
        })();
      </adapter>
    </script>
    <depends>
      <module>jquery</module>
      <as>jquery</as>
    </depends>
  </module>

  <module>
    <name>invite</name>
